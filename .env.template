# 環境変数テンプレート（本番環境用）
# このファイルをコピーして .env を作成し、実際の値を設定してください
# .env ファイルは .gitignore で除外されています

# アプリケーション設定
ENVIRONMENT=production
DEBUG=False

# AI API設定
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_BASE_URL=http://localhost:11434

# 機能フラグ（本番で有効にする機能を選択）
ENABLE_AI_FEATURES=True
ENABLE_OBS_INTEGRATION=False
ENABLE_STREAMING_FEATURES=False

# データベース（将来用）
DATABASE_URL=your-database-url-here

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# セキュリティ設定
ALLOWED_HOSTS=yourdomain.com,*.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# 外部サービス連携
YOUTUBE_API_KEY=your-youtube-api-key-here
TWITCH_CLIENT_ID=your-twitch-client-id-here
TWITCH_CLIENT_SECRET=your-twitch-client-secret-here